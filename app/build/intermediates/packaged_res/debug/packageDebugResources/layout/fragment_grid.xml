<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wholeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#777777" android:tag="layout/fragment_grid_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/mainMenu"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginEnd="-58dp"
            app:backgroundTint="@null"
            android:background="@drawable/rounded_button"
            android:rotation="-90"
            android:gravity="top|center_horizontal"
            android:paddingTop="12dp"
            android:text="EXIT"
            android:textSize="29sp"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
            android:id="@+id/orangeTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:textColor="@color/darkOrange"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/squareLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gridContainer"
            app:layout_constraintVertical_bias="0.8"/>

        <ImageView
            android:id="@+id/orangeSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="skipPushTurn"
            android:rotation="180"
            android:visibility="gone"
            android:src="@drawable/orange_skip"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/squareLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"/>

        <TextView
            android:id="@+id/blueTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLACE"
            android:textColor="@color/darkBlue"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/gridContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squareLayout"
            app:layout_constraintVertical_bias="0.2" />


        <ImageView
            android:id="@+id/blueSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="skipPushTurn"
            android:src="@drawable/blue_skip"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squareLayout"
            app:layout_constraintVertical_bias="0.9" />

        <TextView
            android:id="@+id/scoreBoard"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginStart="-58dp"
            android:background="@drawable/rounded_button"
            android:rotation="-90"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="18dp"
            android:text="0 . 0"
            android:textSize="30sp"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.955" />


        <FrameLayout
            android:id="@+id/gridContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <GridLayout
                android:id="@+id/borderGridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="8"
                android:rowCount="8" />

            <GridLayout
                android:id="@+id/tokenGridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="8"
                android:rowCount="8" />




        </FrameLayout>

        <FrameLayout
            android:id="@+id/squareLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_border_grid"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/winnerBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/winnerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rules_texte_background"
            android:text="EXIT"
            android:textColor="@color/grey"
            android:textSize="40sp"
            app:backgroundTint="@null"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/winnerTextView"
            app:layout_constraintVertical_bias="0.17" />







    </androidx.constraintlayout.widget.ConstraintLayout>


         